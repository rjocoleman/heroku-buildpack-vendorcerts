#!/bin/bash


indent() {
  sed -u 's/^/       /'
}

mkdir /app/certs
cd /app/certs

echo "-----> Found a .cert_urls file"

# Bail early but noisily
if [ ! -s $1/.cert_urls ]; then
  echo ".cert_urls empty. Skipping." | indent
  exit 0
fi

cd $1

while read url; do
  if [ -n "$url" ]; then # incase ensure_newline_at_eof_on_save is enabled
    echo Vendoring $url | indent
    curl -L -O -J --silent $url
  fi
done < .cert_urls
